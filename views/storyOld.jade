extend layout
block content
    div.score.
        0.000
    div.panel.panel-story
        div.back
            a(href='/instructions').
                ‚Üê
        div.text.text-story.
            Allow your camera to be used to begin acting.
        p.phrase
        div.media
            div.feedback
            div.face
            audio(id='audio-src', src='', type='audio/mpeg')
            video.media-video(id='video-el', width='400', height='300', preload='auto', loop)
            canvas.media-canvas(id='overlay', width='400', height='300')
        canvas.hidden-canvas(id='sketch', width='400', height='300')
        div.controls
            input.hide.btn(id='proceed-button', type='button', value='loading...', disabled='disabled')
        div.all(align='center')
         div.faces(style='color:blue; display:block; padding:0px 24px 0px 11px;margin:-30px 26px 1px 26px;')
          div.emotion0(style='color:blue; display:inline-block;padding: 0px 60px;background-image: url(/images/emotion_0.png);background-position:center center; background-repeat:no-repeat; min-height:80px;min-width:80px;') 
          div.emotion1(style='color:blue; display:inline-block;padding: 0px 60px;background-image: url(/images/emotion_1.png);background-position:center center; background-repeat:no-repeat; min-height:80px;min-width:80px;') 
          div.emotion2(style='color:blue; display:inline-block;padding: 0px 60px;background-image: url(/images/emotion_2.png);background-position:center center; background-repeat:no-repeat; min-height:80px;min-width:80px;') 
          div.emotion3(style='color:blue; display:inline-block;padding: 0px 60px;background-image: url(/images/emotion_3.png);background-position:center center; background-repeat:no-repeat; min-height:80px;min-width:80px;') 

        div.bars(style='color:blue; display:block;padding:30px;min-height:100px;max-height:100px')
          div.bar0(style='color:blue; display:inline-block;margin: 0px 30 px;background-color: #ff1a00; min-height:100px; min-width:40px;bottom:145px;left:110px;position:absolute;') 
          div.bar1(style='color:blue; display:inline-block;margin: 0px 30 px;background-color: #0097ff; min-height:100px; min-width:40px;bottom:145px;left:235px;position:absolute;') 
          div.bar2(style='color:blue; display:inline-block;margin: 0px 30 px;background-color: #ff9800; min-height:100px; min-width:40px;bottom:145px;left:365px;position:absolute;') 
          div.bar3(style='color:blue; display:inline-block;margin: 0px 30 px;background-color: #d8d838; min-height:100px; min-width:40px;bottom:145px;left:480px;position:absolute;') 

        div(style='display:block;')
          div(style='display:inline-block; min-height:20px; width:80px; text-align:center;margin:0 17px 0px 0px;') Angry
          div(style='display:inline-block; min-height:20px;width:80px;text-align:center;margin:0 0px 0 24px;') Sad
          div(style='display:inline-block; min-height:20px;width:80px;text-align:center;margin:0 24px 0 45px') Surprised
          div(style=' display:inline-block;min-height:20px;width:80px;text-align:center;margin:0px 17px;') Happy
